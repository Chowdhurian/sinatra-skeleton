<html>
    <head></head>
    <body>
        <div class="row" id="login">
            <div class="col-sm-4 col-sm-offset-4">
                <div class="formbox">
                    <h1>Login</h1>
                    <form action="/login" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label for="email-field" class="control-label col-sm-4">
                                <p>Email</p>
                            </label>
                            <div class="col-sm-8">
                                <input type="text" name="email" id="email-field" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password-field" class="control-label col-sm-4">
                                <p>Password</p>
                            </label>
                            <div class="col-sm-8">
                                <input type="password" name="password" id="password-field" class="form-control">
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-submit">submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="row" id="signup">
            <div class="col-md-4 col-sm-offset-4">
                <div class="formbox">
                    <h1>Signup</h1>
                    <form action="/signup" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label for="firstname-field" class="control-label col-sm-4">
                                <p>First name</p>
                            </label>
                            <div class="col-sm-8">
                                <input type="text" name="firstname" id="firstname-field" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email-field" class="control-label col-sm-4">
                                <p>Email</p>
                            </label>
                            <div class="col-sm-8">
                                <input type="text" name="email" id="email-field" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password-field" class="control-label col-sm-4">
                                <p>Password</p>
                            </label>
                            <div class="col-sm-8">
                                <input type="password" name="password" id="password-field" class="form-control">
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-submit">submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
