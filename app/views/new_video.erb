<html>
    <body>
        <div class="row">
            <div class="col-md-4 col-sm-offset-4">
                <div class="formbox">
                    <h1>Add New Video</h1>
                    <form action="/videos/new" method="post" class="form-horizontal">
                        <div class="form-group">
                            <label for="title-field" class="control-label col-sm-4">
                                <p>Title</p>
                            </label>
                            <div class="col-sm-7">
                                <input type="text" name="title" id="title-field" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="image-field" class="control-label col-sm-4">
                                <p>Image</p>
                            </label>
                            <div class="col-sm-7">
                                <input type="text" name="image" id="image-field" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="media-type-field" class="control-label col-sm-4">
                                <p>Media type</p>
                            </label>
                            <div class="col-sm-7">
                                <select name="media_type" id="media-type-field" class="form-control">
                                    <option>Short</option>
                                    <option>Feature</option>
                                    <option>Series</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="genre-field" class="control-label col-sm-4">
                                <p>Genre</p>
                            </label>
                            <div class="col-sm-7">
                                <select multiple name="genre" id="genre-field" class="form-control">
                                    <option>Scifi</option>
                                    <option>Action</option>
                                    <option>Comedy</option>
                                    <option>Suspense</option>
                                </select>
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-submit">submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>